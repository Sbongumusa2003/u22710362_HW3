@section scripts {
    <script>
        // STAFF FUNCTIONS
        function editStaff(id) {
            $.ajax({
                url: '@Url.Action("GetStaffDetails", "Home")',
                type: 'GET',
                data: { id: id },
                success: function (data) {
                    if (data.success) {
                        $('#edit_staff_id').val(data.staff_id);
                        $('#edit_staff_first_name').val(data.first_name);
                        $('#edit_staff_last_name').val(data.last_name);
                        $('#edit_staff_email').val(data.email);
                        $('#edit_staff_phone').val(data.phone);
                        $('#edit_staff_active').val(data.active);
                        $('#edit_staff_store_id').val(data.store_id);
                        $('#edit_staff_manager_id').val(data.manager_id || '');
                        $('#editStaffModal').modal('show');
                    } else {
                        alert('Failed to load staff details');
                    }
                },
                error: function () {
                    alert('Error loading staff details');
                }
            });
        }

        function viewStaffDetails(id) {
            $.ajax({
                url: '@Url.Action("GetStaffDetails", "Home")',
                type: 'GET',
                data: { id: id },
                success: function (data) {
                    if (data.success) {
                        var html = '<div class="row">' +
                            '<div class="col-md-6"><p><strong>Staff ID:</strong> ' + data.staff_id + '</p></div>' +
                            '<div class="col-md-6"><p><strong>Active:</strong> ' + (data.active == 1 ? '<span class="badge bg-success">Active</span>' : '<span class="badge bg-danger">Inactive</span>') + '</p></div>' +
                            '<div class="col-md-6"><p><strong>First Name:</strong> ' + data.first_name + '</p></div>' +
                            '<div class="col-md-6"><p><strong>Last Name:</strong> ' + data.last_name + '</p></div>' +
                            '<div class="col-md-6"><p><strong>Phone:</strong> ' + (data.phone || 'N/A') + '</p></div>' +
                            '<div class="col-md-6"><p><strong>Street:</strong> ' + (data.street || 'N/A') + '</p></div>' +
                            '<div class="col-md-6"><p><strong>City:</strong> ' + (data.city || 'N/A') + '</p></div>' +
                            '<div class="col-md-6"><p><strong>State:</strong> ' + (data.state || 'N/A') + '</p></div>' +
                            '<div class="col-md-6"><p><strong>Zip Code:</strong> ' + (data.zip_code || 'N/A') + '</p></div>' +
                            '</div>';
                        $('#customerDetailsContent').html(html);
                        $('#viewCustomerDetailsModal').modal('show');
                    }
                }
            });
        }

        function deleteCustomer(id, name) {
            $('#delete_customer_id').val(id);
            $('#delete_customer_name').text(name);
            $('#deleteCustomerModal').modal('show');
        }

        // PRODUCT FUNCTIONS
        function editProduct(id) {
            $.ajax({
                url: '@Url.Action("GetProductDetails", "Home")',
                type: 'GET',
                data: { id: id },
                success: function (data) {
                    if (data.success) {
                        $('#edit_product_id').val(data.product_id);
                        $('#edit_product_name').val(data.product_name);
                        $('#edit_product_brand_id').val(data.brand_id);
                        $('#edit_product_category_id').val(data.category_id);
                        $('#edit_product_model_year').val(data.model_year);
                        $('#edit_product_list_price').val(data.list_price);
                        $('#editProductModal').modal('show');
                    } else {
                        alert('Failed to load product details');
